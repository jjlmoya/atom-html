<section class="bs_step og-banner-screen
                l-grid-column--full l-flex l-flex--align-center l-flex--direction-column
                a-pad--top-40 {{modifier}} l-column--1-1">
    <div class="l-position">
        {{> atoms/title/h1 title=title
                size="m"
                color=""
                modifier="og-banner-screen__claim a-text--center a-text--uppercase a-text--bold l-position--absolute"}}
