<div class="og-slider--simple
            l-grid-column--full
            l-flex l-flex--align-center l-flex--justify-center
            l-position bs_slider {{modifier}}"
     data-autoplay="50000000"
     data-content=".bs_slider_content"
     data-slide=".bs_slide"
     data-button=".og-slider--simple__button"
     data-arrow=".bs_slider_arrow">
    <div class="og-slider--simple__content bs_slider_content">
        {{#times 3}}
            {{> molecules/slider/content/basic id=@index modifier="bs_slide"}}
        {{/times}}
    </div>
    {{> molecules/slider/buttons
            modifier="l-position--absolute l-position--absolute--bottom og-slider--simple__buttons a-pad "
            modifierIcon="og-slider--simple__button"
            buttonLength=3
    }}
    {{> molecules/slider/arrow
            direction="left"
            modifier="bs_slider_arrow ml-arrow--full l-flex l-flex--align-center l-flex--justify-center"}}
    {{> molecules/slider/arrow
            direction="right"
            modifier="bs_slider_arrow ml-arrow--full
                      l-flex l-flex--align-center l-flex--justify-center"}}
</div>

