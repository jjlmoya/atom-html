<header class="og-header-double l-grid-column--full l-position--sticky u-layer-1 {{modifier}}">
    <div class="og-header-double--logo {{background}} l-flex l-flex--justify-center l-flex--align-center">
        {{> atoms/image/normal
                pictureClass=""
                modifier="a-pad-5"
                src=logo }}
    </div>
    <nav class="og-header-double--navigation
                l-flex l-flex--align-center
                a-pad-5 a-bg--mono-1">
        <a class="og-header-double--navigation--link
                        a-text a-text--xs a-text--link a-pad--x a-text--center" href="{{path}}">Inicio</a>
        {{#each pages}}
            <a href="{{../path}}{{path}}"
               class="og-header-double--navigation--link
                        a-text a-text--xs a-text--link a-pad--x a-text--center">{{name}}</a>
        {{/each}}

    </nav>
</header>