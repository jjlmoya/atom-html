<div class="og-poster-detail
            a-pad-40
            a-pad--mobile-20
            l-flex l-flex--justify-center l-flex--mobile--wrap ">
    <div class="og-poster-detail__image l-column--1-2 l-column--mobile--1-1 l-position">
        {{> atoms/image/poster
                src="https://es.t-mobile.com/sdcdn/dtmobile//content/dam/t-mobile/en-p/internet-devices/apple/watch-series4-44/space-gray-black-band/Apple-WatchSeries4-Cellular-44mm-AluminumSpaceGray-SportBand-Black-1-3x.jpg"
                pictureClass="og-poster-detail__picture a-text--right l-column--1-1"
                modifier="l-column--1-1"
        }}
       {{> molecules/image/selection
               modifier="l-position--absolute l-position--absolute--bottom-left"}}
    </div>
    <div class="og-poster-detail__text
                a-pad-40 a-pad--mobile
                l-column--1-2 l-column--mobile--1-1
                l-flex l-flex--direction-column l-flex--justify-center">
        {{> atoms/title/h2 title="Atomic Watch" modifier="a-text--shadow a-text--left a-text--bold"}}
        {{#times 3}}
            {{> atoms/paragraph/simple
                    text="Two brothers follow their father's footsteps as hunters,
                 fighting evil supernatural beings of many kinds, including monsters,
                  demons, and gods that roam the earth." modifier="a-pad--y a-text--s a-text--light l-column--2-3"}}
        {{/times}}
        {{> atoms/content/price
                modifier="a-pad--y a-text--shadow a-text--xl"
                value="1.300"
                currency="â‚¬"}}
        {{> atoms/button/rounded
                modifier="a-button--s a-button--secondary l-column--1-3"
                cta="Comprar"}}
    </div>
</div>